<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <base href="/">

  <link rel="stylesheet" href="styles/main.css">
  <link rel="stylesheet" href="styles/burger.css">
  <script defer src="/js/burger.js"></script>
  <script defer src="js/admin.js"></script>
  <title>Game Lord</title>
</head>

<body>
  <main>
    <!-- START: HAMBURGER MENU DROP DOWN -->
    <div class="container">
      <h1>Game Info</h1>
      <div id="topNav" class="navigation">
        <span id="closebtn" onclick="navToggle()">
          <span class="line1"></span>
          <span class="line2"></span>
          <span class="line3"></span>

        </span>
        <div class="logo">
          <!-- <h1 id="title">Game Lord</h1> -->
          <img src="" />

        </div>

        <div class="websiteName">

          <ul class="menulist">
            <li><a class="menuitems" href="/">HOME</a></li>
            <li><a class="menuitems" href="/admin">ADMIN</a></li>
            <!-- <li><a class="menuitems" href="/library">LIBRARY</a></li> -->
          </ul>
        </div>


        <div id="main">
        </div>
      </div>
      <!-- END: HAMBURGER MENU DROP DOWN -->

      <h4>Game Information:</h4>
      <hr>

      Title: <%= game.title %> <br>
      Genre: <%= game.genre %> <br>
      Date: <%= game.date %> <br>
      Description: <%= game.description %><br>
      Console: <%= game.console[0].name %> <br>
      <!-- Console: <input type="text" name="console" placeholder="Console"> -->
      <!-- <select name="console" id="consoleId"> -->
      <!-- <option value="< console.name %>">< console.name %></option> -->
      <!-- </select> -->
      <form style="display: block;" action="/admin/<%= game._id %>?_method=DELETE" method="POST">
        <button type="submit">Delete Game</button>
      </form>

      <a href="/admin/<%= game._id %>/edit">
        <button>Edit Game</button>
      </a>
  </main>
</body>

</html>