<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/main.css">
    <link rel="stylesheet" href="styles/burger.css">
    <link rel="stylesheet" href="styles/gameCard.css">
    <script defer src="js/burger.js"></script>
    <script defer src="js/admin.js"></script>
    <title>Game Lord</title>
</head>

<body>
    <main>
        <!-- HAMBURGER MENU DROP DOWN -->
        <div id="topNav" class="navigation">
            <span id="closebtn" onclick="navToggle()">
                <span class="line1"></span>
                <span class="line2"></span>
                <span class="line3"></span>
            </span>
            <div class="logo">
                <!-- <h1 id="title">Game Lord</h1> -->
                <img src="" />

            </div>

            <ul class="menulist">
                <li><a class="menuitems" href="/">HOME</a></li>
                <li><a class="menuitems" href="/admin">ADMIN</a></li>
                <!-- <li><a class="menuitems" href="/library">LIBRARY</a></li> -->
            </ul>
        </div>

        <div id="main">
        </div>

        <!-- <div class="websiteName"> -->
        <h1>Admin Page</h1>
        <p>Please fill out the Game information you would like to add to rent.</p>
        <hr>

        <!-- START: FORM -->
        <div class="form">
            <form action="/admin" method="POST">
                <div class="title-form">
                    <label for="title">Title:</label><br>
                    <input type="text" name="title" placeholder="ex: Call of Duty" required>
                </div>
                <div class="genre-form">
                    <label for="genre">Genre:</label><br>
                    <input type="text" name="genre" placeholder="ex: First Person Shooter" required>
                </div>
                <div class="date-form">
                    <label for="date">Date:</label><br>
                    <input type="text" name="date" placeholder="ex: 1/1/2020" required>
                </div>
                <div class="description-form">
                    <label for="description">Description:</label><br>
                    <input type="text" name="description" placeholder="ex: The most awesome game ever!" required>
                </div>
                <br>
                <div class="console-form">
                    Console:
                    <select id="addConsole" name="console">
                        <!-- Add Consoles From DataBase -->
                        <% consoles.forEach((console) => { %>
                        <option value="<%= console._id %>"><%= console.name %></option>
                        <% }) %>
                    </select>
                </div>
                <input type="submit" value="Add Game">
            </form>
        </div>
    
             
             

            <!-- <form action="/admin">
                <input type="file" id="myFile" name="filename"> <br> -->
                <!-- <input type="submit"> -->
                
              <!-- </form>

            <hr>
        </form> -->
        <!-- END: FORM -->
        
        <% if (typeof games !=='undefined' && games.length) { %>
        <% games.forEach((game) => { %>
            <div class="wrapper">
                <div class="card"><img src="https://cidco-smartcity.niua.org/wp-content/uploads/2017/08/No-image-found.jpg">  
                    <div class="info">  
                        <h1><%= game.title %></h1>
                        <h4><%= game.genre %></h4>
                        <p><%= game.description %></p>
                        <p><%= game.console[0].name %></p>
                        <p><%= game.date %></p>
                        <a href="/admin/<%= game._id %>">
                            <button>View Info</button>
                        </a>
                    </div> 
                </div>    
            </div>
        <% }) %>
        <% } else { %>
        <h4>No Games Found</h4>
        <% } %>
        
    </main>
</body>

</html>