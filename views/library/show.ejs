<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/main.css">
    <link rel="stylesheet" href="styles/burger.css">
    <script defer src="js/burger.js"></script>
    <script defer src="js/admin.js"></script>
    <title>Game Lord</title>
</head>
<body>
    <!-- HAMBURGER MENU DROP DOWN -->
    <h1>Games Library</h1>
    <div id="topNav" class="navigation">
        <span id="closebtn" onclick="navToggle()">
            <span class="line1"></span>
            <span class="line2"></span>
            <span class="line3"></span>
                
        </span>
        <div class="logo">
            <!-- <h1 id="title">Game Lord</h1> -->
            <img src="" />
                
        </div>
    
        <ul class="menulist">
            <li><a class="menuitems" href="#">ABOUT</a></li>
            <li><a class="menuitems" href="/admin">ADMIN</a></li>
            <li><a class="menuitems" href="/library">LIBRARY</a></li>
            <li><a class="menuitems" href="#">CONTACT US</a></li>
        </ul>
    </div>

    <h4><%= game.title %></h4>

    <form style="display: inline;" action="/admin/<%= game._id %>?_method=DELETE" method="POST">
      <button type="submit">Delete</button>
    </form>


    <a href="/admin/<%= game._id %>/edit">
      <button>Edit</button>
    </a>
    
    <section>
      <ul>
        <% game.forEach((game, i) => { %>
            <li><%= i %>. <a href="/library/<%= game._id %>"><%= game.title %></a></li>
        <% }) %>
      </ul>
    </section>

</body>
</html>